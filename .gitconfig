[color]
	ui = auto
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[alias]
	unstage = reset HEAD --
	st = status
	s = status -uno
	ci = commit
	di = diff -b
	co = checkout
	up = checkout
	update = checkout
	l = log
	hgrevert = checkout
	strip = reset --hard
	branches = branch -a
	pull = fetch

[instaweb]
	local = true
	httpd = lighttpd -f
	port = 4321
	browser = firefox

[merge]
	tool = vimdiff
